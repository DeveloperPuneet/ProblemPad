    script.
      // Form validation
      const form = document.querySelector('.auth-form');
      form.addEventListener('submit', function(e) {
        const mobile = document.getElementById('mobile').value;
        const oldPin = document.getElementById('oldPin').value;
        const newPin = document.getElementById('newPin').value;
        const confirmPin = document.getElementById('confirmPin').value;
        
        // Clear previous errors
        document.getElementById('mobile').classList.remove('error');
        document.getElementById('oldPin').classList.remove('error');
        document.getElementById('newPin').classList.remove('error');
        document.getElementById('confirmPin').classList.remove('error');

        let hasError = false;

        // Mobile validation
        if (mobile.trim().length < 10) {
          e.preventDefault();
          alert('Please enter a valid mobile number');
          document.getElementById('mobile').classList.add('error');
          hasError = true;
        }

        // PIN validation (4-6 digits)
        const pinRegex = /^\d{4,6}$/;
        
        if (!pinRegex.test(oldPin)) {
          e.preventDefault();
          alert('Old PIN must be 4-6 digits only');
          document.getElementById('oldPin').classList.add('error');
          hasError = true;
        }

        if (!pinRegex.test(newPin)) {
          e.preventDefault();
          alert('New PIN must be 4-6 digits only');
          document.getElementById('newPin').classList.add('error');
          hasError = true;
        }

        if (newPin !== confirmPin) {
          e.preventDefault();
          alert('New PIN and Confirm PIN do not match');
          document.getElementById('newPin').classList.add('error');
          document.getElementById('confirmPin').classList.add('error');
          hasError = true;
        }

        if (oldPin === newPin) {
          e.preventDefault();
          alert('New PIN cannot be the same as old PIN');
          document.getElementById('newPin').classList.add('error');
          hasError = true;
        }

        if (hasError) {
          return;
        }
      });

      // Auto-hide alert after 5 seconds
      document.addEventListener('DOMContentLoaded', function() {
        const alert = document.querySelector('.alert');
        if (alert) {
          setTimeout(() => {
            alert.style.opacity = '0';
            alert.style.transform = 'translateY(-10px)';
            setTimeout(() => alert.remove(), 300);
          }, 5000);
        }

        // PIN input formatting (numbers only)
        const pinInputs = document.querySelectorAll('input[type="password"]');
        pinInputs.forEach(input => {
          input.addEventListener('input', function() {
            this.value = this.value.replace(/\D/g, '');
            if (this.value.length > 6) {
              this.value = this.value.slice(0, 6);
            }
          });
        });

        // Mobile input formatting
        const mobileInput = document.getElementById('mobile');
        if (mobileInput) {
          mobileInput.addEventListener('input', function() {
            this.value = this.value.replace(/\D/g, '');
          });
        }

        // Real-time PIN confirmation check
        const newPinInput = document.getElementById('newPin');
        const confirmPinInput = document.getElementById('confirmPin');
        
        function checkPinMatch() {
          if (newPinInput.value && confirmPinInput.value) {
            if (newPinInput.value !== confirmPinInput.value) {
              newPinInput.classList.add('error');
              confirmPinInput.classList.add('error');
            } else {
              newPinInput.classList.remove('error');
              confirmPinInput.classList.remove('error');
            }
          }
        }

        newPinInput.addEventListener('input', checkPinMatch);
        confirmPinInput.addEventListener('input', checkPinMatch);
      });