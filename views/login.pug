doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Login - ProblemPad
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    style.
      :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --secondary: #10b981;
        --dark: #0f172a;
        --darker: #020617;
        --light: #f8fafc;
        --gray: #64748b;
        --gray-dark: #334155;
        --error: #ef4444;
        --success: #10b981;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      body {
        background-color: var(--darker);
        color: var(--light);
        line-height: 1.6;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }

      /* Header */
      header {
        background-color: rgba(2, 6, 23, 0.9);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid var(--gray-dark);
      }

      .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
      }

      .logo {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--light);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .logo i {
        color: var(--primary);
      }

      /* Main Content */
      .main-content {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 0;
      }

      .auth-container {
        width: 100%;
        max-width: 400px;
      }

      .auth-card {
        background: rgba(15, 23, 42, 0.9);
        border: 1px solid var(--gray-dark);
        border-radius: 12px;
        padding: 2.5rem;
        backdrop-filter: blur(10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
      }

      .auth-header {
        text-align: center;
        margin-bottom: 2rem;
      }

      .auth-header h1 {
        font-size: 2rem;
        margin-bottom: 0.5rem;
        color: var(--light);
      }

      .auth-header p {
        color: var(--gray);
        font-size: 1rem;
      }

      /* Alert Messages */
      .alert {
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        animation: slideDown 0.3s ease-out;
      }

      .alert-error {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid var(--error);
        color: #fca5a5;
      }

      .alert-success {
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid var(--success);
        color: #6ee7b7;
      }

      .alert-icon {
        font-size: 1.25rem;
        flex-shrink: 0;
      }

      .alert-message {
        flex: 1;
        font-weight: 500;
      }

      @keyframes slideDown {
        from {
          opacity: 0;
          transform: translateY(-10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .auth-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .form-group {
        display: flex;
        flex-direction: column;
      }

      .form-group label {
        margin-bottom: 0.5rem;
        color: var(--light);
        font-weight: 600;
        font-size: 0.95rem;
      }

      .form-group input {
        padding: 0.75rem 1rem;
        border: 1px solid var(--gray-dark);
        border-radius: 8px;
        background: var(--darker);
        color: var(--light);
        font-size: 1rem;
        transition: all 0.3s;
      }

      .form-group input:focus {
        outline: none;
        border-color: var(--primary);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
      }

      .form-group input.error {
        border-color: var(--error);
        box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
      }

      .form-group input::placeholder {
        color: var(--gray);
      }

      .form-hint {
        font-size: 0.85rem;
        color: var(--gray);
        margin-top: 0.25rem;
      }

      .forgot-pin {
        text-align: right;
        margin-top: -0.5rem;
      }

      .forgot-pin a {
        color: var(--primary);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s;
      }

      .forgot-pin a:hover {
        color: var(--light);
        text-decoration: underline;
      }

      .btn {
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        border: none;
        font-size: 1rem;
        text-align: center;
        text-decoration: none;
        display: inline-block;
      }

      .btn-primary {
        background: var(--primary);
        color: var(--light);
        width: 100%;
      }

      .btn-primary:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
      }

      .btn-primary:active {
        transform: translateY(0);
      }

      .auth-links {
        margin-top: 2rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
      }

      .auth-links a {
        color: var(--primary);
        text-decoration: none;
        transition: color 0.3s;
      }

      .auth-links a:hover {
        color: var(--light);
        text-decoration: underline;
      }

      /* Demo Accounts Hint */
      .demo-hint {
        background: rgba(99, 102, 241, 0.1);
        border: 1px solid var(--primary);
        border-radius: 8px;
        padding: 1rem;
        margin-top: 1.5rem;
        font-size: 0.9rem;
      }

      .demo-hint h4 {
        color: var(--primary);
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .demo-accounts {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.5rem;
        margin-top: 0.5rem;
      }

      .demo-account {
        background: var(--darker);
        padding: 0.5rem;
        border-radius: 6px;
        font-size: 0.8rem;
      }

      .demo-account .role {
        color: var(--primary);
        font-weight: 600;
      }

      /* Footer */
      footer {
        background-color: var(--darker);
        border-top: 1px solid var(--gray-dark);
        padding: 2rem 0;
        margin-top: auto;
      }

      .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
      }

      .footer-links {
        display: flex;
        gap: 1.5rem;
        list-style: none;
      }

      .footer-links a {
        color: var(--gray);
        text-decoration: none;
        transition: color 0.3s;
      }

      .footer-links a:hover {
        color: var(--primary);
      }

      .footer-bottom {
        text-align: center;
        padding-top: 1.5rem;
        margin-top: 1.5rem;
        border-top: 1px solid var(--gray-dark);
        color: var(--gray);
        font-size: 0.9rem;
      }

      /* Responsive Styles */
      @media (max-width: 768px) {
        .auth-card {
          padding: 2rem 1.5rem;
        }

        .footer-content {
          flex-direction: column;
          text-align: center;
        }

        .footer-links {
          justify-content: center;
        }

        .demo-accounts {
          grid-template-columns: 1fr;
        }
      }

      @media (max-width: 480px) {
        .auth-header h1 {
          font-size: 1.75rem;
        }

        .auth-card {
          padding: 1.5rem 1rem;
        }
      }

  body
    // Header
    header
      .container
        .nav-container
          a.logo(href="/")
            i.fas.fa-tools
            | ProblemPad

    // Main Content
    main.main-content
      .container
        .auth-container
          .auth-card
            .auth-header
              h1 Welcome Back! ðŸ‘‹
              p Sign in to your ProblemPad account

            //- Error Message Display
            if msg
              .alert.alert-error
                i.fas.fa-exclamation-triangle.alert-icon
                .alert-message= msg

            form.auth-form(action="/login", method="POST")
              .form-group
                label(for="mobile") Mobile Number
                input(
                  type="tel", 
                  id="mobile", 
                  name="mobile", 
                  placeholder="Enter your mobile number", 
                  required,
                  value=formData ? formData.mobile : ""
                )
                .form-hint Enter the mobile number you used during registration

              .form-group
                label(for="pin") PIN
                input(
                  type="password", 
                  id="pin", 
                  name="pin", 
                  placeholder="Enter your 4-6 digit PIN", 
                  maxlength="6",
                  required,
                  value=formData ? formData.pin : ""
                )
                .form-hint Your PIN is 4-6 digits long
                .forgot-pin
                  a(href="#") Forgot PIN?

              button.btn.btn-primary(type="submit")
                i.fas.fa-sign-in-alt
                |  Sign In

            //- Demo Accounts Hint (for development)
            .demo-hint
              h4
                i.fas.fa-lightbulb
                | Development Hint
              p For testing, use any registered mobile number and PIN. If you don't have an account, please register first.
              .demo-accounts
                .demo-account
                  .role User Account
                  div Mobile: Any registered number
                  div PIN: Your 4-6 digit PIN
                .demo-account
                  .role Worker Account  
                  div Mobile: Any registered number
                  div PIN: Your 4-6 digit PIN

            .auth-links
              a(href="/create-account")
                i.fas.fa-user-plus
                |  Don't have an account? Create one
              a(href="/")
                i.fas.fa-home
                |  Back to Homepage

    // Footer
    footer
      .container
        .footer-content
          .logo
            i.fas.fa-tools
            | ProblemPad
          ul.footer-links
            li
              a(href="/about") About
            li
              a(href="/contact") Contact
            li
              a(href="/term-and-conditions") Terms & Conditions
            li
              a(href="https://github.com/DeveloperPuneet", target="_blank") GitHub
        .footer-bottom
          p &copy; 2025 ProblemPad. All rights reserved. | Your problems, our solutions

    script.
      // Form validation
      const form = document.querySelector('.auth-form');
      form.addEventListener('submit', function(e) {
        const pin = document.getElementById('pin').value;
        const mobile = document.getElementById('mobile').value;
        
        // PIN validation (4-6 digits)
        if (!/^\d{4,6}$/.test(pin)) {
          e.preventDefault();
          alert('PIN must be 4-6 digits only');
          document.getElementById('pin').classList.add('error');
          return;
        } else {
          document.getElementById('pin').classList.remove('error');
        }

        // Basic mobile validation
        if (mobile.trim().length < 10) {
          e.preventDefault();
          alert('Please enter a valid mobile number');
          document.getElementById('mobile').classList.add('error');
          return;
        } else {
          document.getElementById('mobile').classList.remove('error');
        }
      });

      // Auto-hide alert after 5 seconds
      document.addEventListener('DOMContentLoaded', function() {
        const alert = document.querySelector('.alert');
        if (alert) {
          setTimeout(() => {
            alert.style.opacity = '0';
            alert.style.transform = 'translateY(-10px)';
            setTimeout(() => alert.remove(), 300);
          }, 5000);
        }

        // PIN input formatting (numbers only)
        const pinInput = document.getElementById('pin');
        if (pinInput) {
          pinInput.addEventListener('input', function() {
            this.value = this.value.replace(/\D/g, '');
            if (this.value.length > 6) {
              this.value = this.value.slice(0, 6);
            }
          });
        }

        // Mobile input formatting
        const mobileInput = document.getElementById('mobile');
        if (mobileInput) {
          mobileInput.addEventListener('input', function() {
            this.value = this.value.replace(/\D/g, '');
          });
        }
      });