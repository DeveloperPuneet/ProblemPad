doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Discover Communities - ProblemPad
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    style.
      :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --secondary: #10b981;
        --dark: #0f172a;
        --darker: #020617;
        --light: #f8fafc;
        --gray: #64748b;
        --gray-dark: #334155;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      }

      body {
        background-color: var(--darker);
        color: var(--light);
        line-height: 1.6;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      .container {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }

      /* Header */
      .dashboard-header {
        background-color: rgba(2, 6, 23, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid var(--gray-dark);
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        height: 70px;
      }

      .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 70px;
      }

      .logo {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--light);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 10px;
      }

      .logo i {
        color: var(--primary);
      }

      .user-menu {
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .user-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }

      .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--primary);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: var(--light);
      }

      .nav-links {
        display: flex;
        gap: 1.5rem;
        margin-left: 2rem;
      }

      .nav-links a {
        color: var(--light);
        text-decoration: none;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        transition: background 0.3s;
      }

      .nav-links a:hover, .nav-links a.active {
        background: var(--primary);
      }

      .logout-btn {
        background: var(--gray-dark);
        color: var(--light);
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        cursor: pointer;
        transition: background 0.3s;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .logout-btn:hover {
        background: var(--primary);
      }

      /* Main Content */
      .discover-main {
        flex: 1;
        margin-top: 70px;
        padding: 2rem 0;
      }

      .page-header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .page-header h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, var(--primary), var(--primary-dark));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .page-header p {
        color: var(--gray);
        font-size: 1.1rem;
      }

      /* Search Section */
      .search-section {
        background: var(--dark);
        border: 1px solid var(--gray-dark);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
      }

      .search-form {
        display: grid;
        grid-template-columns: 1fr auto auto;
        gap: 1rem;
        align-items: end;
      }

      @media (max-width: 768px) {
        .search-form {
          grid-template-columns: 1fr;
        }
      }

      .form-group {
        margin-bottom: 0;
      }

      .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: var(--light);
      }

      .form-group input, .form-group select {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid var(--gray-dark);
        border-radius: 8px;
        background: var(--darker);
        color: var(--light);
      }

      .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        border: none;
        font-size: 1rem;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
      }

      .btn-primary {
        background: var(--primary);
        color: var(--light);
      }

      .btn-primary:hover {
        background: var(--primary-dark);
        transform: translateY(-2px);
      }

      .btn-outline {
        background: transparent;
        border: 1px solid var(--gray-dark);
        color: var(--light);
      }

      .btn-outline:hover {
        border-color: var(--primary);
        background: rgba(99, 102, 241, 0.1);
      }

      .btn-success {
        background: var(--secondary);
        color: var(--light);
      }

      .btn-success:hover {
        background: #0da271;
      }

      /* Communities Grid */
      .communities-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
      }

      .community-card {
        background: var(--dark);
        border: 1px solid var(--gray-dark);
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
      }

      .community-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--primary);
      }

      .community-card:hover {
        transform: translateY(-5px);
        border-color: var(--primary);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
      }

      .community-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
      }

      .community-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        background: var(--primary);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-right: 1rem;
        flex-shrink: 0;
        color: var(--light);
      }

      .community-info {
        flex: 1;
      }

      .community-name {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--light);
      }

      .community-desc {
        color: var(--gray);
        margin-bottom: 1rem;
        line-height: 1.5;
      }

      .community-stats {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 1rem;
        font-size: 0.9rem;
      }

      .stat {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--gray);
      }

      .community-categories {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
      }

      .category-tag {
        background: rgba(99, 102, 241, 0.1);
        color: var(--primary);
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
      }

      .community-actions {
        display: flex;
        gap: 0.75rem;
      }

      .btn-full {
        flex: 1;
        justify-content: center;
      }

      /* Empty State */
      .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: var(--dark);
        border: 2px dashed var(--gray-dark);
        border-radius: 12px;
        grid-column: 1 / -1;
      }

      .empty-icon {
        font-size: 4rem;
        color: var(--gray);
        margin-bottom: 1.5rem;
      }

      .empty-state h3 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
        color: var(--light);
      }

      .empty-state p {
        color: var(--gray);
        margin-bottom: 2rem;
      }

      /* Loading State */
      .loading {
        text-align: center;
        padding: 2rem;
        grid-column: 1 / -1;
      }

      .spinner {
        width: 40px;
        height: 40px;
        border: 4px solid var(--gray-dark);
        border-left: 4px solid var(--primary);
        border-radius: 50%;
        animation: spin 1s linear infinite;
        margin: 0 auto 1rem;
      }

      @keyframes spin {
        to { transform: rotate(360deg); }
      }

      /* Your Communities Section */
      .your-communities {
        background: var(--dark);
        border: 1px solid var(--gray-dark);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
      }

      .section-title {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        color: var(--light);
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }

      .section-title i {
        color: var(--primary);
      }

      /* Footer */
      footer {
        background-color: var(--darker);
        border-top: 1px solid var(--gray-dark);
        padding: 4rem 0 2rem;
        margin-top: auto;
      }

      .footer-content {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 3rem;
        margin-bottom: 3rem;
      }

      .footer-column h3 {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        color: var(--light);
      }

      .footer-links {
        list-style: none;
      }

      .footer-links li {
        margin-bottom: 0.8rem;
      }

      .footer-links a {
        color: var(--gray);
        text-decoration: none;
        transition: color 0.3s;
      }

      .footer-links a:hover {
        color: var(--primary);
      }

      .social-links {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
      }

      .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--gray-dark);
        color: var(--light);
        text-decoration: none;
        transition: background 0.3s;
      }

      .social-links a:hover {
        background: var(--primary);
      }

      .footer-bottom {
        text-align: center;
        padding-top: 2rem;
        border-top: 1px solid var(--gray-dark);
        color: var(--gray);
        font-size: 0.9rem;
      }

      @media (max-width: 768px) {
        .nav-links {
          display: none;
        }

        .communities-grid {
          grid-template-columns: 1fr;
        }

        .community-header {
          flex-direction: column;
        }

        .community-icon {
          margin-bottom: 1rem;
        }
      }

  body
    // Header
    header.dashboard-header
      .container
        .header-content
          a.logo(href="/dashboard")
            i.fas.fa-tools
            | ProblemPad
          .nav-links
            a(href="/dashboard") Dashboard
            a.active(href="/discover") Discover
            a(href="/profile") Profile
          .user-menu
            .user-info
              .user-avatar= user.Name.charAt(0).toUpperCase()
              .user-details
                .user-name= user.Name
                .user-role= user.role
            a.logout-btn(href="/logout")
              i.fas.fa-sign-out-alt
              |  Logout

    // Main Content
    main.discover-main
      .container
        // Page Header
        .page-header
          h1 Discover Communities
          p Find and join communities that match your interests and skills

        // Your Communities
        if userCommunities && userCommunities.length > 0
          .your-communities
            .section-title
              i.fas.fa-users
              | Your Communities (#{userCommunities.length})
            .communities-grid
              each community in userCommunities.slice(0, 3)
                .community-card
                  .community-header
                    .community-icon
                      i.fas.fa-users
                    .community-info
                      .community-name= community.Name
                      .community-desc= community.Description || "No description provided"
                      .community-stats
                        .stat
                          i.fas.fa-users
                          span #{community.members.length} members
                  .community-actions
                    a.btn.btn-primary.btn-full(href=`/com/${community.gp_id}`)
                      i.fas.fa-door-open
                      | Enter Community

        // Search Section
        .search-section
          form.search-form#searchForm
            .form-group
              label(for="searchQuery") Search Communities
              input(type="text", id="searchQuery", name="query", placeholder="Search by name or description...")
            .form-group
              label(for="categoryFilter") Category
              select(id="categoryFilter", name="category")
                option(value="all") All Categories
                option(value="technical") Technical
                option(value="electrical") Electrical
                option(value="plumbing") Plumbing
                option(value="carpentry") Carpentry
                option(value="cleaning") Cleaning
                option(value="other") Other
            .form-group
              button.btn.btn-primary(type="submit")
                i.fas.fa-search
                | Search

        // Communities Results
        #communitiesResults
          if communities && communities.length > 0
            .communities-grid
              each community in communities
                .community-card
                  .community-header
                    .community-icon
                      i.fas.fa-users
                    .community-info
                      .community-name= community.Name
                      .community-desc= community.Description || "No description provided"
                      .community-stats
                        .stat
                          i.fas.fa-users
                          span #{community.members.length} members
                        .stat
                          i.fas.fa-calendar
                          span= new Date(community.createdAt).toLocaleDateString()
                      if community.Category && community.Category.length > 0
                        .community-categories
                          each cat in community.Category
                            .category-tag= cat
                  .community-actions
                    button.btn.btn-success.btn-full.join-community(
                      data-community-id=community.gp_id
                    )
                      i.fas.fa-plus
                      | Join Community
          else
            .empty-state
              .empty-icon
                i.fas.fa-search
              h3 No Communities Found
              p We couldn't find any communities matching your search. Try different keywords or categories.
              a.btn.btn-primary(href="/discover")
                i.fas.fa-refresh
                | Show All Communities

    // Footer
    footer
      .container
        .footer-content
          .footer-column
            h3 ProblemPad
            p A platform connecting service professionals with users to resolve complaints efficiently.
            .social-links
              a(href="https://github.com/DeveloperPuneet", target="_blank")
                i.fab.fa-github
          .footer-column
            h3 Quick Links
            ul.footer-links
              li
                a(href="/") Home
              li
                a(href="/about") About Us
              li
                a(href="/contact") Contact
              li
                a(href="/term-and-conditions") Terms & Conditions
          .footer-column
            h3 Account
            ul.footer-links
              li
                a(href="/login") Login
              li
                a(href="/create-account") Create Account
              li
                a(href="/forgot-pin") Forgot Password
          .footer-column
            h3 Contact Info
            ul.footer-links
              li
                i.fas.fa-envelope
                |  developerpuneet2010@gmail.com
              li
                i.fas.fa-map-marker-alt
                |  Punjab, India
        .footer-bottom
          p &copy; 2025 ProblemPad. All rights reserved. | Designed with ❤️ for better problem solving

    script.
      // Search and Filter Functionality
      document.getElementById('searchForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        await searchCommunities();
      });

      document.getElementById('searchQuery').addEventListener('input', debounce(searchCommunities, 500));
      document.getElementById('categoryFilter').addEventListener('change', searchCommunities);

      async function searchCommunities() {
        const query = document.getElementById('searchQuery').value;
        const category = document.getElementById('categoryFilter').value;
        
        const resultsContainer = document.getElementById('communitiesResults');
        resultsContainer.innerHTML = `
          <div class="loading">
            <div class="spinner"></div>
            <p>Searching communities...</p>
          </div>
        `;

        try {
          const response = await fetch(`/search-communities?query=${encodeURIComponent(query)}&category=${category}`);
          const communities = await response.json();

          if (communities.length === 0) {
            resultsContainer.innerHTML = `
              <div class="empty-state">
                <div class="empty-icon">
                  <i class="fas fa-search"></i>
                </div>
                <h3>No Communities Found</h3>
                <p>We couldn't find any communities matching your search. Try different keywords or categories.</p>
                <button class="btn btn-primary" onclick="clearSearch()">
                  <i class="fas fa-refresh"></i>
                  Show All Communities
                </button>
              </div>
            `;
          } else {
            resultsContainer.innerHTML = `
              <div class="communities-grid">
                ${communities.map(community => `
                  <div class="community-card">
                    <div class="community-header">
                      <div class="community-icon">
                        <i class="fas fa-users"></i>
                      </div>
                      <div class="community-info">
                        <div class="community-name">${community.Name}</div>
                        <div class="community-desc">${community.Description || "No description provided"}</div>
                        <div class="community-stats">
                          <div class="stat">
                            <i class="fas fa-users"></i>
                            <span>${community.members.length} members</span>
                          </div>
                          <div class="stat">
                            <i class="fas fa-calendar"></i>
                            <span>${new Date(community.createdAt).toLocaleDateString()}</span>
                          </div>
                        </div>
                        ${community.Category && community.Category.length > 0 ? `
                          <div class="community-categories">
                            ${community.Category.map(cat => `<div class="category-tag">${cat}</div>`).join('')}
                          </div>
                        ` : ''}
                      </div>
                    </div>
                    <div class="community-actions">
                      <button class="btn btn-success btn-full join-community" data-community-id="${community.gp_id}">
                        <i class="fas fa-plus"></i>
                        Join Community
                      </button>
                    </div>
                  </div>
                `).join('')}
              </div>
            `;

            // Re-attach event listeners to join buttons
            attachJoinEventListeners();
          }
        } catch (error) {
          console.error('Search failed:', error);
          resultsContainer.innerHTML = `
            <div class="empty-state">
              <div class="empty-icon">
                <i class="fas fa-exclamation-triangle"></i>
              </div>
              <h3>Search Failed</h3>
              <p>There was an error searching for communities. Please try again.</p>
              <button class="btn btn-primary" onclick="searchCommunities()">
                <i class="fas fa-refresh"></i>
                Try Again
              </button>
            </div>
          `;
        }
      }

      function clearSearch() {
        document.getElementById('searchQuery').value = '';
        document.getElementById('categoryFilter').value = 'all';
        searchCommunities();
      }

      // Join Community Functionality
      function attachJoinEventListeners() {
        document.querySelectorAll('.join-community').forEach(button => {
          button.addEventListener('click', async function() {
            const communityId = this.getAttribute('data-community-id');
            const button = this;
            
            button.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Joining...';
            button.disabled = true;

            try {
              const response = await fetch(`/join-community/${communityId}`, {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json'
                }
              });

              const result = await response.json();

              if (result.success) {
                button.innerHTML = '<i class="fas fa-check"></i> Joined!';
                button.classList.remove('btn-success');
                button.classList.add('btn-primary');
                
                // Redirect after short delay
                setTimeout(() => {
                  window.location.href = `/com/${communityId}`;
                }, 1000);
              } else {
                button.innerHTML = '<i class="fas fa-plus"></i> Join Community';
                button.disabled = false;
                alert('Error: ' + result.error);
              }
            } catch (error) {
              console.error('Join failed:', error);
              button.innerHTML = '<i class="fas fa-plus"></i> Join Community';
              button.disabled = false;
              alert('Failed to join community. Please try again.');
            }
          });
        });
      }

      // Debounce function for search
      function debounce(func, wait) {
        let timeout;
        return function executedFunction(...args) {
          const later = () => {
            clearTimeout(timeout);
            func(...args);
          };
          clearTimeout(timeout);
          timeout = setTimeout(later, wait);
        };
      }

      // Initial attachment of event listeners
      document.addEventListener('DOMContentLoaded', function() {
        attachJoinEventListeners();
      });